<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
android:background="@drawable/img_5"
android:gravity="bottom"
    android:layout_height="match_parent"
    tools:context=".Ui.signup">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="#0000ffff"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="35dp"
android:orientation="vertical"
            android:background="@drawable/cardcorner"
            android:layout_height="wrap_content">
            <TextView

                android:text="Create Account"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="#473131"
                android:gravity="center"
              android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text=" Name"
                android:padding="5dp"
                android:id="@+id/firstname"
                android:textColor="#473131"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_person_24"
                android:hint="Enter your name"
                android:padding="10dp"
                android:textColorHint="#473131"
                android:textColor="#473131"
                android:textSize="18sp" />

            <TextView
                android:text="Email"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/email"

                android:hint="Enter your Email"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="7dp"
                android:padding="10dp"
                android:textColorHint="#473131"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Password"
                android:padding="5dp"
                android:textColor="#473131"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <EditText
                android:id="@+id/password"
                android:layout_marginTop="5dp"
                android:hint="Enter your Password"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="7dp"
                android:padding="10dp"
                android:textColorHint="#473131"
                android:textSize="18sp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imageViewEye"
        android:layout_width="40dp"
        android:layout_toEndOf="@id/password"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="togglePasswordVisibility"
        android:src="@drawable/baseline_remove_red_eye_24" />

</RelativeLayout>
            <TextView
                android:text="Confirm Password"
                android:padding="5dp"
                android:textColor="#473131"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <EditText
                android:id="@+id/confirmpassword"
                android:layout_marginTop="5dp"

                android:hint="Enter your Password"
                 android:textColorHint="#473131"
                android:drawableLeft="@drawable/baseline_lock_open_24"
                android:drawablePadding="7dp"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imageEye"
        android:layout_width="40dp"
        android:layout_toEndOf="@id/confirmpassword"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="toggleVisibility"
        android:src="@drawable/baseline_remove_red_eye_24" />


</RelativeLayout>
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/signup"
                android:text="Sign up"
                android:backgroundTint="#473131"
android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account"
                    android:textSize="15sp"

                    android:layout_marginVertical="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Signin"
                    android:id="@+id/signin"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"
                    android:textColor="#473131"
                    android:layout_marginVertical="10dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
