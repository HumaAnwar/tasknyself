<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Study">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:alpha="0.4"
        android:src="@drawable/baseline_library_books_24" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="15dp"
            android:background="#C84921"
            android:backgroundTint="#E468A579"
            android:id="@+id/workcv"
            app:cardCornerRadius="20dp"
            android:elevation="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Study Tasks"
                android:id="@+id/wt"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:textSize="19dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_below="@id/workcv"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/rvwork"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#E468A579"
            android:layout_marginEnd="30dp"
            android:id="@+id/studyadd"
            android:src="@drawable/baseline_add_24"/>
    </RelativeLayout>
