<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/maindrawer1"
    tools:context=".Ui.different_tasks">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                app:navigationIcon="@drawable/baseline_format_align_left_24"
                app:title="list Details" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                android:text="Lists"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"

                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/work"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/wrkimg"
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:src="@drawable/img_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/wrkimg"
                            android:layout_centerHorizontal="true"
                            android:text="Work"

                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Music"
                    android:layout_width="150dp"
                    android:layout_height="230dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/work"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/mi"
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/music"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="Music"
                            android:layout_below="@id/mi"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/travel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/work"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ti"
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/travel" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ti"
                            android:layout_centerHorizontal="true"
                            android:text="Travel"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/food"
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_below="@id/Music"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/travel"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/fi"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/food" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/fi"
                            android:layout_centerHorizontal="true"
                            android:text="Food"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/study"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_below="@id/travel"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/sim"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/img_19" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/sim"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="-17dp"
                            android:text="Study"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/home"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_below="@id/food"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/study"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/hi"
                            android:layout_width="144dp"
                            android:layout_height="104dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/img_23"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/hi"
                            android:layout_centerHorizontal="true"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="20dp"
                            android:text="home"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/shopping"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_below="@id/study"
                    app:cardCornerRadius="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/si"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/img_20" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/si"
                            android:layout_marginHorizontal="20dp"
                            android:text="Shopping"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/bills"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@id/home"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/shopping"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bi"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/img_22"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bi"
                            android:layout_centerHorizontal="true"
                            android:layout_marginHorizontal="20dp"
                            android:text="Bills"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/activity_left"
        app:menu="@menu/menu_list" />

</androidx.drawerlayout.widget.DrawerLayout>