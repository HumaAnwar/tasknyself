<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/img_28"
    tools:context=".profilemy">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/imagetodo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/img29" />

        <TextView
            android:id="@+id/mya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagetodo"
            android:layout_marginTop="10dp"
            android:text="NAME"
            android:fontFamily="@font/myfont"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cn"
                    android:backgroundTint="#D1DCE1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mya"
                    android:layout_marginTop="6dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                              android:gravity="center"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/myfont"
                            android:paddingStart="10dp"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:layout_marginHorizontal="10dp"
                            android:text="Name :" />

                        <TextView
                            android:id="@+id/entername"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                           android:layout_gravity="center"
                            android:layout_margin="5dp"
                           android:paddingStart="70dp"
                            android:textStyle="bold"
                            android:layout_marginVertical="10dp"
                            android:text="Huma Anwar"
                            android:textAppearance="?android:textAppearanceMedium" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ce"
                    android:backgroundTint="#D1DCE1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cn"
                    android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:layout_below="@+id/cn"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/myfont"
                            android:layout_marginHorizontal="10dp"
                            android:text="Email :" />

                        <TextView
                            android:id="@+id/editTextName"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_below="@id/email"
                            android:layout_marginTop="10dp"
                            android:paddingStart="70dp"
                            android:textStyle="bold"
                            android:text="huma01122@gmail.com"
                            android:textAppearance="?android:textAppearanceMedium" />
                </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ce"
            android:layout_marginTop="14dp"
            android:backgroundTint="#D1DCE1"
            android:layout_marginBottom="6dp">
                <TextView
                    android:id="@+id/dob"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/ce"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/myfont"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="Date of Birth :" />

                <TextView
                    android:id="@+id/editTextDOB"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:paddingStart="130dp"
                    android:textStyle="bold"
                    android:hint="Enter your date of birth"
                    android:inputType="date"
                    android:textAppearance="?android:textAppearanceMedium" />

        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardViewDOB"
            android:layout_marginTop="6dp"
            android:backgroundTint="#D1DCE1"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp">
                <TextView
                    android:id="@+id/textViewGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender :"
                    android:fontFamily="@font/myfont"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_below="@id/cardViewDOB"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="16dp"/>

                <TextView
                    android:id="@+id/textViewgr"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@id/textViewGender"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#D1DCE1"
                    android:paddingStart="90dp"
                    android:text="female"
                    android:textAppearance="?android:textAppearanceMedium" />
        </androidx.cardview.widget.CardView>
        <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_below="@id/cardViewg"
                    android:layout_marginTop="16dp"
                    android:layout_centerHorizontal="true"/>


        </RelativeLayout>