<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/img_28"
    tools:context=".profilemy">
        <TextView
            android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Account"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:id="@+id/mya"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/imagetodo"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/mya"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/img29" />
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imagetodo"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_marginHorizontal="10dp"
                    android:text="Name" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cn"
                    android:backgroundTint="#D1DCE1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="6dp"
                    app:cardCornerRadius="10dp">

                        <TextView
                            android:id="@+id/entername"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                           android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:paddingStart="12dp"
                            android:layout_marginVertical="10dp"
                            android:text="Huma Anwar"
                            android:textAppearance="?android:textAppearanceMedium" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_below="@+id/cn"
                    android:layout_marginVertical="7dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="Email" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/ce"
                    android:backgroundTint="#D1DCE1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cn"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="30dp">

                        <TextView
                            android:id="@+id/editTextName"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingStart="12dp"
                            android:layout_below="@id/email"
                            android:layout_marginTop="10dp"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:text="huma01122@gmail.com" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/dob"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/ce"
                    android:layout_marginTop="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="Date of Birth" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dob"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="#D1DCE1"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/editTextDOB"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:paddingStart="12dp"
                    android:hint="Enter your date of birth"
                    android:inputType="date"
                    android:textAppearance="?android:textAppearanceMedium" />

        </androidx.cardview.widget.CardView>



                <TextView
                    android:id="@+id/textViewGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_below="@id/cardViewDOB"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="16dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewGender"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="#D1DCE1"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/textViewgr"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/textViewGender"
            android:layout_marginTop="10dp"
            android:paddingStart="12dp"
            android:backgroundTint="#D1DCE1"
            android:layout_marginStart="3dp"
            android:textAppearance="?android:textAppearanceMedium"
             android:text="female"
                />
        </androidx.cardview.widget.CardView>
        <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_below="@id/cardViewg"
                    android:layout_marginTop="16dp"
                    android:layout_centerHorizontal="true"/>


        </RelativeLayout>